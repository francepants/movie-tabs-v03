<div>
    <h1>Welcome <%= current_user.username %>!</h1>
    <hr>

    <% if current_user.reviews.present? %>
    <h4>Here are your reviews</h4>
    <br>

</div>
  <% current_user.reviews.each do |rev|%>
    <div>
        <p><strong>Movie:</strong> <%= rev.movie.title %></p>
        <p><strong>Review title:</strong> <%= rev.title %></p>
        <p><%= rev.comment %></p>
            <% if current_user?(rev.user) %>
              <%= link_to "Edit", edit_review_path(rev) %> |
              <%= link_to "Delete", rev, method: :delete, data: { confirm: "Do you want to delete this post ?"}%>
          <% end %>
    </div>
    <hr>
  <% end %>

  <% else %> 
    <p>You have made no reviews yet...</p>
<% end %>