<div class = "container">

    <h1>All Movies</h1>
    <hr class="my-4">

    <!---search--->
    <%= form_tag(movies_path, method: 'get') do %>
        <div>
            <%= text_field_tag :term, nil, id: "Search"%>
            <%= submit_tag "Search" %>
        </div>
    <% end %>

    <br>
    <br>

    <% @movies.each do |m| %>
            <div>
                <li><%= link_to m.title, movie_path(m) %> - <%= m.release_year %></li>
            </div>
    <% end %>

</div>

